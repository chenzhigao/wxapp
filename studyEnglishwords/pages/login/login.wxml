<view class="container">
    <view class="login-icon">
        <image class="login-img" src="/images/1.png"></image>
    </view>
    <view class="login-from">
        <!--用户名-->
        <view class="inputView">
            <image class="nameImage" src="/images/icon/name.png"></image>
            <label class="loginLab">用户名</label>
            <input class="inputText" placeholder="请输入用户名" bindinput="userInput"/>
        </view>
        <view class="line"></view>
        <!--密码-->
        <view class="inputView">
            <image class="keyImage" src="/images/icon/key.jpg"></image>
            <label class="loginLab">密码</label>
            <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
        </view>
        <!--按钮-->
        <view class="loginBtnView">
            <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">绑定用户</button>
        </view>
    </view>
</view>